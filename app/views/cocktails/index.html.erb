
<div class="container">
  <div class="row">

    <h1> ALL OUR COCKTAILS </h1>


    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-success" %>


    <% @cocktails.each do |cocktail| %>
      <p><%= cocktail.name %></p>
      <%= link_to "View this cocktail", cocktail_path(cocktail), class: "btn btn-primary" %>
      <%= button_to "Delete this cocktail", cocktail_path(cocktail), method: :delete, class: "btn btn-danger" %>

      <% end %>


  </div>
</div>


